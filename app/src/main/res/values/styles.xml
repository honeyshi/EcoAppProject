<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorActivityBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogWindowTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogWindowMessage</item>

        <!-- button style -->
        <item name="buttonBarPositiveButtonStyle">@style/YesDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/YesDialogButton</item>
    </style>

    <style name="YesDialogButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="DialogWindowTitle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="DialogWindowMessage">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IngredientRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ingredient_rating_bar_small
        </item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="IngredientRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ingredient_rating_bar_big</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

</resources>

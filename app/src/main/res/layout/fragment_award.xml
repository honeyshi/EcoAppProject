<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/top_view_award_fragment"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:background="@drawable/ic_user_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/switcher_view_header_award_fragment"
        android:layout_width="317dp"
        android:layout_height="113dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/shape_switcher_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/top_view_award_fragment"/>

    <View
        android:id="@+id/switcher_view_decoration_award_fragment"
        android:layout_width="317dp"
        android:layout_height="113dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_flower_clouds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/top_view_award_fragment"/>

    <TextView
        android:id="@+id/text_view_header_challenge_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/colorWhite"
        android:text="@string/text_view_top_header_award_fragment"
        android:textSize="@dimen/text_size_switcher_header"
        app:layout_constraintEnd_toEndOf="@id/switcher_view_header_award_fragment"
        app:layout_constraintStart_toStartOf="@id/switcher_view_header_award_fragment"
        app:layout_constraintTop_toTopOf="@id/switcher_view_header_award_fragment"
        app:layout_constraintBottom_toBottomOf="@id/switcher_view_header_award_fragment"
        app:fontFamily="@font/montserrat_bold"/>

    <View
        android:id="@+id/rectangle_award_fragment"
        android:layout_width="156dp"
        android:layout_height="107dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view_award_fragment"/>

    <View
        android:id="@+id/bottom_view_award_fragment"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/ic_saved_articles_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view_award_fragment"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/award_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_view_award_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>